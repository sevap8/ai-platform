# Chunk settings for text splitting
CHUNK_SIZE=1000

# Overlap between chunks (number of characters)
CHUNK_OVERLAP=200

# Separator character
SEPARATOR=\n

# Host and port for the application
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true
LOG_LEVEL=INFO

# Qdrant settings
QDRANT_URL=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=documents

# Max file size in MB
MAX_FILE_SIZE_MB=10
